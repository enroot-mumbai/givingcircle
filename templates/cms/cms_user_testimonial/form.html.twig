{% extends 'layout/content.html.twig' %}

{% block cms_content %}

    {% set back_to_list = app.request.server.get('HTTP_REFERER') %}

    <div class="card">
        <div class="card-header">
            <h5 class="card-title">
                {% if mode == 'add' %}<i class="fa fa-plus"></i> {% else%} <i class="fa fa-edit"></i> {% endif%}  <b>{{label_title|trans|upper}}</b>
            </h5>
        </div>
    </div>
        {{ form_start(form) }}
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <table class="table table-responsive-md text-sm">
                        <tbody>
                        <tr>
                             <th>User</th>
                            <td>{{ cms_user_testimonial.appuser.appUserInfo.userFirstName|default('') }} {{ cms_user_testimonial.appuser.appUserInfo.userLastName|default('') }}</td>
                        </tr>
                        <tr>
                            <th>{{ form_label(form.testimonialFor) }}</th>
                            <td>
                                {#{{ cms_user_testimonial.testimonialFor }}#}

                                {{ form_widget(form.testimonialFor) }}
                            </td>
                        </tr>
                        <tr>
                            <th>{{ form_label(form.testimonialDetail) }}</th>
                            <td>
                                {#{{ cms_user_testimonial.testimonialDetail|raw }}#}
                                {{ form_widget(form.testimonialDetail) }}
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                {{ form_row(form.isActive) }}
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
                {#<div class="row">
                    <div class="col-auto">
                        {{ form_row(form.isActive) }}
                    </div>
                </div>#}
            </div>
        </div>


        <div class="card-footer">
            <button type="submit" class="{{ button_css|default("btn btn-dark btn-sm") }}">
                <i class="fa fa-save" aria-hidden="true"></i> {{ label_button|trans }}

            </button><a href="{{ back_to_list }}" class="btn btn-link">
                <i class="fa fa-list-alt" aria-hidden="true"></i> {{ 'action.back_to_list'|trans }}
            </a>
        </div>
        {{ form_end(form) }}

{% endblock %}
