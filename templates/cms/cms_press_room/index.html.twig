{% extends 'layout/content.html.twig' %}
{% block cms_content %}
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title"><a href="{{ path(path_add) }}" class="btn btn-dark btn-sm"><i class="fa fa-plus"></i> {{label_title|trans}}</a></h4>
                </div>
                <nav class="card-content collapse show">
                    <div class="card-body card-dashboard ">
                        <table id="dataTable" class="table table-responsive-md table-sm text-sm">
                            <thead>
                            <tr>
                                <th>{{ 'label.image'|trans|upper }}</th>
                                <th>{{ 'label.date'| trans|upper }}</th>
                                <th>{{ 'label.title'| trans|upper }}</th>
                                <th>{{ 'label.content'| trans|upper }}</th>
                                <th>{{ 'label.is_active'| trans|upper }}</th>
                                <th></th>
                                <th></th>
                                <th></th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for cms_press_room in cms_press_rooms %}
                        <tr>
                            <td>
                                <img src="{{ cms_press_room.articleIntroDesktopImagePath|imagine_filter('resize_image_100') }}" alt="..">
                            </td>
                            <td>{{ cms_press_room.articleDateTime ? cms_press_room.articleDateTime|date('Y-m-d H:i:s') : '' }}</td>
                            <td>{{ cms_press_room.articleHeading }}</td>
                            <td>{{ cms_press_room.articleContent | truncate(150) | raw }}</td>
                            <td>{{ cms_press_room.isActive ? 'Yes' : 'No' }}</td>
                            <td colspan="3">
                                <div class="btn-group-toggle" role="group" aria-label="Action Buttons">
                                    <a href="{{ path(path_show, {'id': cms_press_room.id}) }}"><button type="button" class="btn btn-dark btn-sm"><i class="fa fa-expand"></i></button></a>
                                    <a href="{{ path(path_edit, {'id': cms_press_room.id}) }}"><button type="button" class="btn btn-dark btn-sm"><i class="fa fa-edit"></i></button></a>&nbsp;
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8">{{'info.no_record_found'|trans}}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                    </table>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-sm-5">
                            <div class="text-muted"><span class="domrecord"></span></div>
                        </div>
                        <div class="col-sm-7">
                            <nav aria-label="Page navigation example">
                                <ul class="pagination justify-content-end">
                                    <li class="dompage"></li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </div>
</div>
{% endblock %}

