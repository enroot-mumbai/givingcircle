{% extends 'layout/content.html.twig' %}

{% block cms_content %}
    <div class="card">
        <div class="card-header">
            <h4 class="card-title txt-bold float-left">Transaction ID: {{ data.transactionId |upper}}</h4>
            <h4 class="card-title float-right">
                <a href="{{ path(path_index) }}" class="btn btn-dark btn-sm"><i class="fa fa-list"></i> {{'label.back_to_list' | trans}}</a>
            </h4>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="card-body">
                    <div class="card-header mt-2">
                        <h3 class="card-title">{{ 'Order Details'|upper }}</h3>
                    </div>
                    <div class="row">
                        <table class="table table-responsive-md text-sm">
                            <tbody>
                            <tr>
                                <th>Order Date</th>
                                <td>{{ data.orderDateTime| date('d M Y H:i:s') }}</td>
                                <th>{{ 'Amount'|trans|upper }}</th>
                                <td><i class="fa fa-rupee"></i> {{ data.transactionAmount | number_format(2, '.', ',') }}</td>
                                <th>Event Name</th>
                                <td>
                                    {{ data.trnCircleEvent }}&nbsp;
                                    <a href="{{ path('product_event_show', {'id': data.trnCircleEvent.id}) }}"
                                       alt="View Event - {{ data.trnCircleEvent }}"
                                       title="View Event - {{ data.trnCircleEvent }}">
                                        <button type="button" class="btn btn-dark btn-sm"><i class="fa fa-expand"></i>
                                        </button>
                                    </a>
                                </td>
                            </tr>
                            <tr>
                                <th>Transaction Status</th>
                                <td>{{ data.transactionStatus|default('Fail') }}</td>
                                <th></th>
                                <td></td>
                                <th></th>
                                <td></td>
                            </tr>
                            <tr>
                                <th>{{ 'First Name'|trans }}</th>
                                <td>{{ data.userFirstName }}</td>
                                <th>{{ 'Last Name'|trans }}</th>
                                <td>{{ data.userLastName }}</td>
                                <th>{{ 'Email'|trans }}</th>
                                <td>{{ data.userEmail }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'Mobile'|trans }}</th>
                                <td>{{ data.userMobileNo }}</td>
                                <th></th>
                                <td></td>
                                <th></th>
                                <td></td>
                            </tr>
                            <tr>
                                <th>{{ 'User Details'|trans }}</th>
                                <td>{{ data.appUser.appUserDetails }}</td>
                                {#<th>{{ 'label.type_of_circle'|trans }}</th>
                                <td>{{ data.mstJoinBy.joinBy }}</td>#}
                                <td colspan="4"></td>
                            </tr>
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <br>
{% endblock %}
