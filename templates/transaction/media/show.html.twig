{% extends 'layout/content.html.twig' %}

{% block cms_content %}
    <div class="card">
        <div class="card-header">
            {#<h4 class="card-title txt-bold float-left">{{ data.circle |upper}}</h4> #}
            <h4 class="card-title float-right">
                <a href="{{ path(path_edit, {'id': data.id}) }}" class="btn btn-dark btn-sm"><i class="fa fa-edit"></i> {{'label.edit'|trans}}</a>
                <a href="{{ path(path_index) }}" class="btn btn-dark btn-sm"><i class="fa fa-list"></i> {{'label.back_to_list' | trans}}</a>
            </h4>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="card-body">
                    <div class="card-header mt-2">
                        <h3 class="card-title">{{ 'Media Details'|upper }}</h3>
                    </div>
                    <div class="row">
                        <table class="table table-responsive-md text-sm">
                            <tbody>
                                <tr>
                                    <th>{{ 'label.company'|trans }}</th>
                                    <td colspan="3">{{ data.orgCompany }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'label.area_interest_primary'|trans }}</th>
                                    <td>{{ data.mstAreaInterestPrimary }}</td>
                                    <th>{{ 'label.area_interest_secondary'|trans }}</th>
                                    <td>{{ data.mstAreaInterestSecondary }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'label.circle'|trans }}</th>
                                    <td>{{ data.trnCircle|default('-') }}</td>
                                    <th>{{ 'label.circle_event'|trans }}</th>
                                    <td>{{ data.trnCircleEvents|default('-') }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'label.media_name'|trans }}</th>
                                    <td>{{ data.mediaName }}</td>
                                    <th>{{ 'label.media_type'|trans }}</th>
                                    <td>{{ data.mediaType }}</td>
                                </tr>
                                {% if data.mediaType == 'video' %}
                                <tr>

                                    <th>{{ 'label.media_name'|trans}}</th>
                                    <td>{{ data.mediaName }}</td>
                                    <th>{{ 'label.media_url'|trans}}</th>
                                    <td>{{ data.mediaURL }}</td>
                                </tr>
                                {% endif %}
                                {% if data.mediaType == 'image' %}
                                    <tr>
                                        <th>{{ 'label.media_name'|trans}}</th>
                                        <td>{{ data.mediaName }}</td>
                                        <th>{{ 'label.media'|trans}}</th>
                                        <td><img src="{{ data.uploadedFilePath|imagine_filter('resize_image_100') }}" alt="trnProductMedia.mediaAltText"></td>
                                    </tr>
                                {% endif %}
                                <tr>
                                    <th>{{ 'label.media_alt_text'|trans}}</th>
                                    <td>{{ data.mediaAltText }}</td>
                                    <th>{{ 'label.media_title'|trans}}</th>
                                    <td>{{ data.mediaTitle }}</td>
                                </tr>
                            </tbody>
                        </table>

                    </div>

                </div>
            </div>
        </div>
    </div>
    <br>
{% endblock %}
