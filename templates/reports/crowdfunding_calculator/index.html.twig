{% extends 'layout/content.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{asset('resources/css/jquery-ui.css')}}">
{% endblock %}
{% block cms_content %}

    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-header">
                    <h4>{{ label_title }}</h4>
                </div>
                <nav class="card-content collapse show">
                    <div class="card-body card-dashboard ">
                        <form method="post" name="cfcalculator" id="cfcalculator" action="{{ path('report_crowdfunding_calculator_result') }}">
                            <div class="row">
                                <div class="col-sm-2">
                                    Name of Campaign / Event Name
                                </div>
                                <div class="col-sm-3">
                                    <input type="text" name="event" id="event">
                                </div>
                                <div class="col-sm-3">
                                    <button type="submit">Search</button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="card-footer">
                        <div class="row">
                            <div class="col-sm-5">
                                <div class="text-muted"><span class="domrecord"></span></div>
                            </div>
                            <div class="col-sm-7">
                                <nav aria-label="Page navigation example">
                                    <ul class="pagination justify-content-end">
                                        <li class="dompage"></li>
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('resources/js/jquery-ui.js') }}"></script>
    <script>
        $( function() {
            var availableEvents = [];
            {% for event in allActiveEvents %}
                availableEvents.push("{{ event.name }}");
            {% endfor %}
                $( "#event" ).autocomplete({
                    source: availableEvents
            });
        } );
    </script>
{% endblock %}