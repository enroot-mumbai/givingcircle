{% extends 'layout/content.html.twig' %}
{% block cms_content %}
    <div class="card">
        <div class="card-header">
            <h4 class="card-title float-right">
                <a href="{{ path(path_index) }}" class="btn btn-dark btn-sm"><i class="fa fa-list"></i> {{'label.back_to_list' | trans}}</a>
            </h4>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="card-body">
                    <div class="row">
                    <table class="table table-responsive-md text-sm">
                        <tbody>
                        <tr>
                            <th>{{ 'label.name'|trans }}</th>
                            <td>{{ data.fullName|default('') }}</td>
                            <th>{{ 'label.email'|trans }}</th>
                            <td><a href="mailto:{{data.emailAddress}}">{{ data.emailAddress|default('-')}}</a></td>
                            <th>{{ 'label.mobile'|trans }}</th>
                            <td><a href="tel:+{{ data.mobileNumber }}">{{ data.mobileNumber }}</a></td>
                        </tr>
                        <tr>
                            <th>{{ 'label.city'|trans }}</th>
                            <td>{{ data.cityName|default('-') }}</td>
                            <th>{{ 'label.area_interest'|trans }}</th>
                            <td>{{ data.interestType }}</td>
                            <th>{{ 'label.help_type'|trans }}</th>
                            <td>{% for help in data.helpType %} &#187; {{ help }}<br> {% endfor %}</td>
                        </tr>
                        <tr>
                            <th>{{ 'label.message'|trans }}</th>
                            <td colspan="5">{{ data.messageDetail|default('-') }}</td>
                        </tr>
                        </tbody>
                    </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br>
{% endblock %}
