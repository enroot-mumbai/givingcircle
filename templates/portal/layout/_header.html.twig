            {% else %}
                <li data-aos="fade-right" data-aos-delay="600" class="login">
                    <a href="{{ path('login-email') }}" class="user"><i class="fa fc-user"></i> <span>Signup / Login</span></a></li>
            {% endif %}
        </ul>
