{% extends 'portal/layout/index.html.twig' %}
{% block portal_content %}
    <!--Main Wrapper Starts-->
    <div class="wrapper report">
        <section class="heading-sec">
            <div class="pgttl typ2">
                <h1>Support</h1>
            </div>
        </section>
        <div class="container">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('homepage') }}"><i class="fa fa-home"></i></a></li>
                    <li class="breadcrumb-item active" aria-current="page">Support</li>
                </ol>
            </nav>
            <div class="row row-grid-md">
                <div class="col-md-12">
                    <h3 class="subheading">The world is full of kind people, if you canâ€™t find one.<br> We help you <span class="txt-red">be one</span> and <span class="txt-red">find many</span>.</h3>
                </div>
                <div class="col-md-12">
                    <p>We only wish that you have a wish to make a change - we will support with the rest.</p>
                    <p>Check <a href="{{ path('faqs') }}">FAQs</a> , it may help</p>
                </div>
            </div>
