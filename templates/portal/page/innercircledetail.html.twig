{% extends 'portal/layout/index.html.twig' %}
{% block portal_content %}
    <!--Main Wrapper Starts-->
    <div class="wrapper">
        <section class="theTeam readmore">
            <div class="container">
                <div class="row">
                    <div class="col">
                        <nav aria-label="breadcrumb" data-aos="fade-right" data-aos-delay="500"
                             class="breadcrumb d-flex justify-content-end">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="{{ path('homepage') }}"><i class="fa fc-home"></i></a>
                                </li>
                                <li class="breadcrumb-item"><a href="{{ path('about-us') }}">About Giving Circle</a>
                                </li>
                                <li class="breadcrumb-item active" aria-current="page">{{ pageContentByPage.pageTitle }}</li>
                            </ol>
                        </nav>
                    </div>
                </div>
                <h2 data-aos="fade-right" data-aos-delay="200">{{ inner_circle_content.pageTitle }}</h2>
                <p>
                    {# Content Start from Cms  #}
                    {% for tmcontent in inner_circle_content.cmsPageContent %}
                        {{ tmcontent|raw }}
                    {% endfor %}
                    {# Content End from Cms  #}
                </p>
                <div class="row">
                    <div class="col">

                        {% set content = pageContentByPage.cmsPageContent[0] %}
                        {% set reverseCls = '' %}
                        {% if(content.mediaPosition) == 'right' %}
                            {% set reverseCls = 'reversed' %}
                        {% endif %}
                        <div class="about-box {{ reverseCls }}">

                            {# Content Start from Cms  #}
                            {% if(content.mediaType) == '' %}
                                {# if no media added #}
                                <p>{{ content.pageContent|raw }}</p>
                            {% else %}
                                {# if media added #}
                                <div class="image-sec" data-aos="fade-right" data-aos-delay="200">

                                    {% if(content.mediaType == 'image' and content.mediaFileName != '') %}
                                        <figure>
                                            <img style="width: auto;" src="{{ asset('images/')~content.mediaFilePath }}" alt="{{ content.mediaAlText }}" title="{{ content.mediaTitle }}">
                                        </figure>
                                    {% elseif(content.mediaType == 'video' and content.mediaPath != '') %}
                                        <div>
                                            <iframe class="vid-img" src="{{ content.mediaPath }}" allowfullscreen="" width="200"></iframe>
                                        </div>
                                    {% endif %}

                                </div>
                                <div class="content-box" data-aos="fade-right" data-aos-delay="200">

                                    <div class="head">{{ content.cmsPage.pageTitle }}</div>
                                    <div class="inner-box">
                                        <a href="mailto:{{ content.cmsPage.cmsIntroEmail }}" class="email-link">{{ content.cmsPage.cmsIntroEmail }}</a>
                                    </div>
                                    <p>{{ content.pageContent|raw }}</p>
                                </div>
                            {% endif %}

                            {# Content End from Cms  #}
                        </div>



                        {#<div class="about-box reversed">

                            {% set content = pageContentByPage.cmsPageContent[0] %}

                            #}{# Content Start from Cms  #}{#
                            {% if(content.mediaType) == '' %}

                                #}{# if no media added #}{#
                                <div class="team-dtls">
                                    <div class="team-info">
                                        <h5 class="card-title">{{ content.cmsPage.pageTitle }}</h5>
                                        <a href="mailto:jcb@jagdishbelwal.com" class="email-link">{{ content.cmsPage.cmsIntroEmail }}</a>
                                        <p>
                                            {{ content.pageContent|raw }}
                                        </p>
                                    </div>
                                </div>

                            {% else %}

                                #}{# if media added #}{#
                                {% if(content.mediaPosition) == 'left' %}

                                    #}{# if media on left and content on right #}{#
                                    <div class="image-sec" data-aos="fade-right" data-aos-delay="200">

                                        {% if(content.mediaType == 'image' and content.mediaFileName != '') %}
                                            <figure>
                                                <img style="width: auto;" src="{{ asset('images/')~content.mediaFilePath }}" alt="{{ content.mediaAlText }}" title="{{ content.mediaTitle }}">
                                            </figure>
                                        {% elseif(content.mediaType == 'video' and content.mediaPath != '') %}
                                            <div>
                                                <iframe class="vid-img" src="{{ content.mediaPath }}" allowfullscreen="" width="200"></iframe>
                                            </div>
                                        {% endif %}

                                    </div>
                                    <div class="content-box" data-aos="fade-right" data-aos-delay="200">

                                        <div class="team-dtls">
                                            <div class="team-info">
                                                <h5 class="card-title">{{ content.cmsPage.pageTitle }}</h5>
                                                <a href="mailto:jcb@jagdishbelwal.com" class="email-link">{{ content.cmsPage.cmsIntroEmail }}</a>
                                                <p>
                                                    {{ content.pageContent|raw }}
                                                </p>
                                            </div>
                                        </div>

                                    </div>
                                {% else %}
                                    #}{# if media on right and content on left #}{#

                                    <div class="content-box padR40" data-aos="fade-right" data-aos-delay="200">

                                        <div class="team-dtls">
                                            <div class="team-info">
                                                <h5 class="card-title">{{ content.cmsPage.pageTitle }}</h5>
                                                <a href="mailto:jcb@jagdishbelwal.com" class="email-link">{{ content.cmsPage.cmsIntroEmail }}</a>
                                                <p>
                                                    {{ content.pageContent|raw }}
                                                </p>
                                            </div>
                                        </div>

                                    </div>
                                    <div class="image-sec" data-aos="fade-right" data-aos-delay="200">
                                        {% if(content.mediaType) != '' %}

                                            {% if(content.mediaType == 'image' and content.mediaFileName != '') %}
                                                <figure>
                                                    <img style="width: auto;" src="{{ content.mediaFilePath|imagine_filter('resize_logo_120') }}" alt="{{ content.mediaAlText }}" title="{{ content.mediaTitle }}">
                                                </figure>
                                            {% elseif(content.mediaType == 'video' and content.mediaPath != '') %}
                                                <div>
                                                    <iframe class="vid-img" src="{{ content.mediaPath }}" allowfullscreen="" width="200"></iframe>
                                                </div>
                                            {% endif %}
                                        {% endif %}
                                    </div>
                                {% endif %}

                            {% endif %}

                            #}{# Content End from Cms  #}{#

                            #}{#<div class="image-sec" data-aos="fade-right" data-aos-delay="200">
                                <a href="#">
                                    <figure>#}{##}{# {{ asset('public/images') }}/{{ team.cmsIntroImagePath}} #}{##}{#
                                        <img src="{{ asset('/images/files/') }}{{ pageContentByPage.cmsIntroImage }}" alt="{{ pageContentByPage.cmsIntroImageAlt }}"
                                             title="{{ pageContentByPage.cmsIntroImageTitle }}">
                                    </figure>
                                </a>
                            </div>
                            <div class="content-box" data-aos="fade-right" data-aos-delay="200">
                                #}{##}{# Content Start from Cms  #}{##}{#
                                {% for content in pageContentByPage.cmsPageContent %}
                                    {{ content|raw }}
                                {% endfor %}
                                #}{##}{# Content End from Cms  #}{##}{#
                                <a href="{{ path('about-us') }}" class="btn btn-primary">View All</a>
                            </div>#}{#
                        </div>#}

                    </div>
                </div>
            </div>
        </section>
    </div>

    <!--Main Wrapper End-->
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function () {
            $('body').removeClass('inner-pg');
            $('body').addClass('static about');
        });
    </script>
{% endblock %}