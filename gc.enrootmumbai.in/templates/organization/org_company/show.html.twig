{% extends 'layout/content.html.twig' %}
{% block cms_content %}
    <div class="card">
        <div class="card-header">
            <h4 class="card-title float-right">
                <a href="{{ path(path_edit, {'id': data.id}) }}" class="btn btn-dark btn-sm"><i class="fa fa-edit"></i> {{'label.edit'|trans}}</a>
                <a href="{{ path(path_index) }}" class="btn btn-dark btn-sm"><i class="fa fa-list"></i> {{'label.back_to_list' | trans}}</a>

            </h4>
        </div>
    </div>
<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="card-body">
                <div class="row">
                    <table class="table table-responsive-md text-sm">
                        <tbody>
                        <tr>
                            <th>{{ 'label.company_logo'|trans }}</th>
                            <td colspan="3"><img src="{{ data.companyLogoFilePath|imagine_filter('resize_logo_120') }}" alt="{{ data.company }}"></td>
                        </tr>
                        <tr>
                            <th>{{ 'label.name'|trans }}</th>
                            <td>{{ data.company }}</td>
                            <th>{{ 'label.website'|trans }}</th>
                            <td>{{ data.companyWebsite }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'label.fiscal_year'|trans }}</th>
                            <td>{{ data.companyFiscalStartMonth ? data.companyFiscalStartMonth|date('d M') : '' }} - {{ data.companyFiscalEndMonth ? data.companyFiscalEndMonth|date('d M') : '' }}</td>
                            <th>{{ 'label.currency'|trans }}</th>
                            <td>{{ data.mstCurrency }}</td>
                        </tr>

                        <tr>
                            <th>{{ 'label.is_active'|trans }}</th>
                            <td colspan="3">{{ data.isActive ? 'Yes' : 'No' }}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
    {% if is_granted('ROLE_SYS_ADMIN') %}
        <div class="card-footer">
            {{ include('form/_delete_form.html.twig') }}
        </div>
    {% endif %}
    <br>
{% endblock %}
