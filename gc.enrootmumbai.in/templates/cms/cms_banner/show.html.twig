{% extends 'layout/content.html.twig' %}

{% block cms_content %}
<div class="card">
    <div class="card-header">
        <h4 class="card-title float-right">
            <a href="{{ path(path_edit, {'id': data.id}) }}/?page_id={{ app.request.get('page_id') }}" class="btn btn-dark btn-sm"><i class="fa fa-edit"></i> {{'label.edit'|trans}}</a>
            <a href="{{ path(path_index) }}?page_id={{ app.request.get('page_id') }}" class="btn btn-dark btn-sm"><i class="fa fa-list"></i> {{'label.back_to_list' | trans}}</a>
            &nbsp;

        </h4>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="card-body">
                <div class="row">
                    <table class="table table-responsive-md text-sm">
                        <tbody>
                            <tr>
                                <th>Name</th>
                                <td>{{ data.bannerName }}</td>
                                <th>Detail</th>
                                <td>{{ data.bannerDescription|raw }}</td>
                            </tr>
                            <tr>
                                <th>Valid From Date</th>
                                <td>{{ data.bannerValidFromDate ? data.bannerValidFromDate|date('d M Y') : '' }}</td>
                                <th>Valid To Date</th>
                                <td>{{ data.bannerValidToDate ? data.bannerValidToDate|date('d M Y') : '' }}</td>
                            </tr>
                            <tr>
                                <th>Target Url</th>
                                <td>{{ data.bannerUrl|default('-') }}</td>
                                <th>Banner</th>
                                <td>
                                    D: <img src="{{ data.bannerDesktopImagePath|imagine_filter('resize_image_200') }}" alt=".."><br>
                                    T: <img src="{{ data.bannerTabletImagePath|imagine_filter('resize_image_200') }}" alt=".."><br>
                                    M: <img src="{{ data.bannerMobileImagePath|imagine_filter('resize_image_200') }}" alt=".."><br>
                                </td>
                            </tr>
                            <tr>
                                <th>Media Type</th>
                                <td>{{ data.bannerMediaType }}</td>
                                <th>Media Position</th>
                                <td>{{ data.bannerPosition|capitalize }}</td>

                            </tr>
                            <tr>
                                <th>Banner Image Name</th>
                                <td>{{ data.bannerImageSetName }}</td>
                                <th>Sequence No</th>
                                <td>{{ data.sequenceNo }}</td>
                            </tr>
                            <tr>
                                <th>Banner Image Alt</th>
                                <td>{{ data.bannerImageAlt }}</td>
                                <th>Banner Image Title</th>
                                <td>{{ data.bannerImageTitle }}</td>
                            </tr>
                            <tr>
                                <th>Is Active</th>
                                <td>{{ data.isActive ? 'Yes' : 'No' }}</td>
                                <th></th>
                                <td></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

    {% if is_granted('ROLE_SYS_ADMIN') %}
        <div class="card-footer">
            {{ include('form/_delete_form.html.twig') }}
        </div>
    {% endif %}
    <br>
{% endblock %}
