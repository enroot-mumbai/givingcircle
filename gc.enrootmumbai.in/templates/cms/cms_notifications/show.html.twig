{% extends 'layout/content.html.twig' %}
{% block cms_content %}
    <div class="card">
        <div class="card-header">
            <h4 class="card-title float-right">
                <a href="{{ path(path_edit, {'id': data.id}) }}" class="btn btn-dark btn-sm"><i class="fa fa-edit"></i> {{'label.edit'|trans}}</a>
                <a href="{{ path(path_index) }}" class="btn btn-dark btn-sm"><i class="fa fa-list"></i> {{'label.back_to_list' | trans}}</a>
            </h4>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="card-body">
                    <div class="row">
                        <table class="table table-responsive-md text-sm">
                            <tbody>
                            <tr>
                                <th >{{ 'label.notification_name'|trans }}</th>
                                <td >{{ data.notificationName }}</td>
                            </tr>
                            <tr>
                                <th >{{ 'label.system_notification'|trans }}</th>
                                <td >{{ data.systemNotification }}</td>
                            </tr>
                            <tr>
                                <th >{{ 'label.text_message'|trans }}</th>
                                <td >{{ data.textMessage }}</td>
                            </tr>
                            <tr>
                                <th >{{ 'label.whats_app_message'|trans }}</th>
                                <td >{{ data.whatappMsg | raw }}</td>
                            </tr>
                            <tr>
                                <th >{{ 'label.push_notification'|trans }}</th>
                                <td >{{ data.pushNotification }}</td>
                            </tr>
                            <tr>
                                <th >{{ 'label.email_subject'|trans }}</th>
                                <td >{{ data.emailSubject }}</td>
                            </tr>
                            <tr>
                                <th >{{ 'label.email_content'|trans }}</th>
                                <td >{{ data.email | raw }}</td>
                            </tr>
                            <tr>
                                <th>Is Active</th>
                                <td colspan="3">{{ data.isActive ? 'Yes' : 'No' }}</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br>
{% endblock %}
