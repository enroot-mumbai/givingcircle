<div class="banner">

    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            {% set is_active = 0 %}
            {% if trnCircleEvents.profileImage is defined and trnCircleEvents.profileImage is not empty and
                trnCircleEvents.profileImage != 'files/'  %}
                {% set is_active = 1 %}
                <div class="carousel-item active">
                    <img style="width: 770px; height: 550px;" class="d-block w-100" src="{{ asset('images') }}/{{
                    trnCircleEvents
                    .profileImage}}"
                         alt="1 slide">
                </div>
            {% endif %}
            {% for trnProductMedia in trnCircleEvents.trnProductMedia %}
                {% if trnProductMedia.mediaType == 'image' %}
                    <div class="carousel-item {% if is_active == 0 and loop.index == 1 %} active {% endif %} ">
                        <img style="width: 770px; height: 550px;" class="d-block w-100"
                             src="{{ asset('images') }}/{{ trnProductMedia.uploadedFilePath}}"
                             alt="{{ loop.index + 1}} slide">
                    </div>
                {% endif %}
            {% endfor %}
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button"
           data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button"
           data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>