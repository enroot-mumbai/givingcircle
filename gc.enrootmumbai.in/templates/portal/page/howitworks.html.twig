{% extends 'portal/layout/index.html.twig' %}
{% block portal_content %}

    {% set otherContentByParent = get_cms_page_content_by_parent(pageContentByPage.id, 'pageroute') %}

    <!--Main Wrapper Starts-->
    <div class="wrapper">
        <!-- Main Content - start -->
        <section class="main">
            <div class="container">
                <div class="row">
                    <div class="col">
                        <nav aria-label="breadcrumb" data-aos="fade-right" data-aos-delay="500"
                             class="breadcrumb d-flex justify-content-end">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="{{ path('homepage') }}"><i class="fa fc-home"></i></a>
                                </li>
                                <li class="breadcrumb-item active" aria-current="page">{{ pageContentByPage.pageTitle }}</li>
                            </ol>
                        </nav>
                    </div>
                </div>
                <h2>{{ pageContentByPage.pageTitle }}</h2>
                {# Content Start from Cms  #}
                    {% set content = pageContentByPage.cmsPageContent[0] %}
                    {% include 'portal/page/_page_content_display.html.twig' %}
                    {# Content End from Cms  #}
            </div>
        </section>
        <!-- Main Content - end -->

        {# Platform section - start #}

        <section class="orange-box">
            <div class="container">
                <div class="row align-items-center">

                    {% set content = pageContentByPage.cmsPageContent[1] %}

                    {# Content Start from Cms  #}
                    {% if(content.mediaType) == '' %}

                        {# if no media added #}
                        <p>{{ content.pageContent|raw }}</p>
                        <div class="btn-clock">
                            <a href="{{ path('create-project') }}" class="btn  btn-white">Create Your Own Project</a>
                            <a href="{{ path('contribute-to-a-change') }}" class="btn  btn-white">Contribute to a Change</a>
                        </div>

                    {% else %}

                        {# if media added #}
                        {% if(content.mediaPosition) == 'left' %}

                            {# if media on left and content on right #}
                            <div class="col-lg-auto">

                                {% if(content.mediaType) != '' %}

                                    <div class="video-placeholder">
{#                                        <a href="#">#}

                                            {% if(content.mediaType == 'image' and content.mediaFileName != '') %}
                                                <img src="{{ asset('images/')~content.mediaFilePath }}" alt="{{ content.mediaAlText }}" title="{{ content.mediaTitle }}">
                                            {% elseif(content.mediaType == 'video' and content.mediaPath != '') %}
                                                <iframe class="vid-img" src="{{ content.mediaPath }}" allowfullscreen="" width="700" height="390"></iframe>
                                            {% endif %}
{#                                        </a>#}
                                    </div>
                                {% endif %}
                                <div class="btn-clock">
                                    <a href="{{ path('create-project') }}" class="btn  btn-white">Create Your Own Project</a>
                                    <a href="{{ path('contribute-to-a-change') }}" class="btn  btn-white">Contribute to a Change</a>
                                </div>

                            </div>
                            <div class="col-lg">
                                <p>{{ content.pageContent|raw }}</p>

                            </div>
                        {% else %}
                            {# if media on right and content on left #}

                            <div class="col-lg">
                                <p>{{ content.pageContent|raw }}</p>
                            </div>
                            <div class="col-lg-auto">
                                {% if(content.mediaType) != '' %}

                                    <div class="video-placeholder">
{#                                        <a href="#">#}

                                    {% if(content.mediaType == 'image' and content.mediaFileName != '') %}
                                            <img src="{{ asset('images/')~content.mediaFilePath }}" alt="{{ content.mediaAlText }}" title="{{ content.mediaTitle }}">
                                    {% elseif(content.mediaType == 'video' and content.mediaPath != '') %}
                                            <iframe class="vid-img" src="{{ content.mediaPath }}" allowfullscreen="" width="700" height="390"></iframe>
                                    {% endif %}
{#                                        </a>#}
                                    </div>
                                {% endif %}
                                <div class="btn-clock">
                                    <a href="{{ path('create-project') }}" class="btn  btn-white">Create Your Own Project</a>
                                    <a href="{{ path('contribute-to-a-change') }}" class="btn  btn-white">Contribute to a Change</a>
                                </div>
                            </div>
                        {% endif %}

                    {% endif %}

                    {# Content End from Cms  #}
                </div>
            </div>
        </section>
        {# Platform section - end #}

        {# Change Makers section - start #}
        <section class="hwitwork-steps">
            <div class="container">
                <div class="row align-items-center">

                    {% set content = pageContentByPage.cmsPageContent[2] %}

                    {# Content Start from Cms  #}
                    {% if(content.mediaType) == '' %}

                        {# if no media added #}
                        <p>{{ content.pageContent|raw }}</p>
                        <a href="{{ path('create-project') }}" class="btn  btn-primary">Create Your Own Project</a>

                    {% else %}

                        {# if media added #}
                        {% if(content.mediaPosition) == 'left' %}

                            {# if media on left and content on right #}
                            <div class="col-lg-auto">
                                <div class="image-placeholder">
                                    <figure>
                                    {% if(content.mediaType == 'image' and content.mediaFileName != '') %}
                                        <img src="{{ asset('images/')~content.mediaFilePath }}" alt="{{ content.mediaAlText }}" title="{{ content.mediaTitle }}">
                                    {% elseif(content.mediaType == 'video' and content.mediaPath != '') %}
                                        <iframe class="vid-img" src="{{ content.mediaPath }}" allowfullscreen="" width="600" height="400"></iframe>
                                    {% endif %}
                                    </figure>
                                </div>
                            </div>
                            <div class="col-lg stepsContent">
                                {{ content.pageContent|raw }}
                                <a href="{{ path('create-project') }}" class="btn  btn-primary">Create Your Own Project</a>
                            </div>
                        {% else %}
                            {# if media on right and content on left #}
                            <div class="col-lg stepsContent">
                                {{ content.pageContent|raw }}
                                <a href="{{ path('create-project') }}" class="btn  btn-primary">Create Your Own Project</a>
                            </div>
                            <div class="col-lg-auto">
                                <div class="image-placeholder">
                                    <figure>
                                        {% if(content.mediaType == 'image' and content.mediaFileName != '') %}
                                            <img src="{{ asset('images/')~content.mediaFilePath }}" alt="{{ content.mediaAlText }}" title="{{ content.mediaTitle }}">
                                        {% elseif(content.mediaType == 'video' and content.mediaPath != '') %}
                                            <iframe class="vid-img" src="{{ content.mediaPath }}" allowfullscreen="" width="600" height="400"></iframe>
                                        {% endif %}
                                    </figure>
                                </div>
                            </div>
                        {% endif %}

                    {% endif %}

                    {# Content End from Cms  #}
                </div>
            </div>
        </section>
        {# Change Makers section - end #}

        {# Contributors section - start #}
        <section class="hwitwork-steps reversed">
            <div class="container">
                <div class="row align-items-center">


                    {% set content = pageContentByPage.cmsPageContent[3] %}

                    {# Content Start from Cms  #}
                    {% if(content.mediaType) == '' %}

                        {# if no media added #}
                        <p>{{ content.pageContent|raw }}</p>
                        <a href="{{ path('contribute-to-a-change') }}" class="btn  btn-primary">Contribute to a Change</a>

                    {% else %}

                        {# if media added #}
                        {% if(content.mediaPosition) == 'left' %}

                            {# if media on left and content on right #}
                            <div class="col-lg-auto">
                                <div class="image-placeholder">
                                    <figure>
                                        {% if(content.mediaType == 'image' and content.mediaFileName != '') %}
                                            <img src="{{ asset('images/')~content.mediaFilePath }}" alt="{{ content.mediaAlText }}" title="{{ content.mediaTitle }}">
                                        {% elseif(content.mediaType == 'video' and content.mediaPath != '') %}
                                            <iframe class="vid-img" src="{{ content.mediaPath }}" allowfullscreen="" width="600" height="400"></iframe>
                                        {% endif %}
                                    </figure>
                                </div>
                            </div>
                            <div class="col-lg stepsContent">
                                {{ content.pageContent|raw }}
                                <a href="{{ path('contribute-to-a-change') }}" class="btn btn-primary">Contribute to a Change</a>
                            </div>
                        {% else %}
                            {# if media on right and content on left #}
                            <div class="col-lg stepsContent">
                                {{ content.pageContent|raw }}
                                <a href="{{ path('contribute-to-a-change') }}" class="btn btn-primary">Contribute to a Change</a>
                            </div>
                            <div class="col-lg-auto">
                                <div class="image-placeholder">
                                    <figure>
                                        {% if(content.mediaType == 'image' and content.mediaFileName != '') %}
                                            <img src="{{ asset('images/')~content.mediaFilePath }}" alt="{{ content.mediaAlText }}" title="{{ content.mediaTitle }}">
                                        {% elseif(content.mediaType == 'video' and content.mediaPath != '') %}
                                            <iframe class="vid-img" src="{{ content.mediaPath }}" allowfullscreen="" width="600" height="400"></iframe>
                                        {% endif %}
                                    </figure>
                                </div>
                            </div>
                        {% endif %}

                    {% endif %}

                    {# Content End from Cms  #}

                </div>
            </div>
        </section>
        {# Contributors section - end #}
    </div>

    <!--Main Wrapper End-->
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function () {
            $('body').removeClass('inner-pg');
            $('body').addClass('static howitWorks');
        });
    </script>
{% endblock %}
