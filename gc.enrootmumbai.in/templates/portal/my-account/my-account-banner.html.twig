                            <ul>
                                <li>
                                    <a href="#" target="_blank"><i class="fc-facebook"></i></a>
                                </li>
                                <li>
                                    <a href="#" target="_blank"><i class="fc-linkedin"></i></a>
                                </li>
                                <li>
                                    <a href="#" target="_blank"><i class="fc-instagram"></i></a>
                                </li>
                                <li>
                                    <a href="#" target="_blank"><i class="fc-youtube"></i></a>
                                </li>
                                <li>
                                    <a href="#" target="_blank"><i class="fc-twitter"></i></a>
                                </li>
                                <li>
                                    <a href="#" target="_blank"><i class="fc-whatsapp"></i></a>
                                </li>
                            </ul>
                        </div>#}

                    </div>
                </div>
            </div>
            </div>
        </figcaption>
    </figure>
</section>
<script>
    var profilePic = backGroundPic = '';
    {% if app.user.appUserInfo.userAvatarImagePath != 'users/' %}
        profilePic = "{{ asset('images/') }}{{ app.user.appUserInfo.userAvatarImagePath }}";
    {% endif %}
    {% if app.user.appUserInfo.backgroundProfilePath != 'users/' %}
        backGroundPic = "{{ asset('images/') }}{{ app.user.appUserInfo.backgroundProfilePath }}";
    {% endif %}
</script>