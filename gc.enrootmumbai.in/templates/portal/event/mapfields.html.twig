<div id="onSiteAddress">
    <div class="col-sm-12">
        <div class="row">
            <div class="col-sm-6">
                <div class="main-form-group">
                    <label for="eventOnSiteAddress1">
                        <span>Address 1 *</span>
                    </label>
                    <div>
{#                        {{ form_widget(form.trnVolunterCircleEventOnSiteAddresses.eventOnSiteAddress1) }}#}
                        <input type="text" name="eventOnSiteAddress1" id="eventOnSiteAddress1" placeholder="Site Address" required="required" class="form-control">
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="main-form-group">
                    <label for="eventOnSiteAddress2">
