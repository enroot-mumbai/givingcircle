                    </label>
                    <div>
{#                        {{ form_widget(form.trnVolunterCircleEventOnSiteAddresses.eventOnSiteAddress2) }}#}
                        <input type="text" name="eventOnSiteAddress2" id="eventOnSiteAddress2" placeholder="Site Address" class="form-control">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-12">
        <div class="row">
            <div class="col-sm-6">
                <div class="main-form-group">
                    <label for="eventOnSitePinCode">
                        <span>Pincode *</span>
                    </label>
                    <div>
{#                        {{ form_widget(form.trnVolunterCircleEventOnSiteAddresses.eventOnSitePinCode) }}#}
                                            <input type="text" pattern="[0-9]{6}" name="eventOnSitePinCode" id="eventOnSitePinCode" placeholder="Pincode" required="required" class="form-control">
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="main-form-group">

                </div>
            </div>
        </div>
