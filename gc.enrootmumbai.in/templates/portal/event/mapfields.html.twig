                                {% for country in countries %}
                                    <option value="{{country.id}}">{{country.country}}</option>
                                {% endfor %}
                            </select>
                        </div>

{#                      <input type="text" name="eventOnSiteCountry" id="eventOnSiteCountry" placeholder="Country" required="required" class="form-control">#}
